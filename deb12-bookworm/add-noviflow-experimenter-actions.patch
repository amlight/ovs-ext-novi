+static enum ofperr
+decode_NOVI_RAW_ACTIONS(const struct novi_action_header *noviact,
+                            enum ofp_version ofp_version OVS_UNUSED,
+                            struct ofpbuf *out)
+{
+    switch(ntohs(noviact->novi_action_type)) {
+    case 0x000c:
+    	ofpact_put_PUSH_INT(out);
+	break;
+    case 0x000d:
+    	ofpact_put_ADD_INT_METADATA(out);
+	break;
+    case 0x000e:
+    	ofpact_put_POP_INT(out);
+	break;
+    case 0x000f:
+    	ofpact_put_SEND_REPORT(out);
+	break;
+    }
+    return 0;
+}
