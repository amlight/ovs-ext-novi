+/* NOVI Actions. */
+struct novi_action_header {
+    ovs_be16 type;                  /* OFPAT_VENDOR. */
+    ovs_be16 len;                   /* At least 16. */
+    ovs_be32 vendor;                /* NOVI_VENDOR_ID 0xff000002 */
